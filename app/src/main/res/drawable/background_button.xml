<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:background="?android:selectableItemBackground">
        <shape
               android:shape="rectangle"
               android:visible="true">
            <corners
                    android:topRightRadius="@dimen/button_rounded_more"
                    android:bottomRightRadius="@dimen/button_rounded_more"
            />
            <solid
                    android:color="@color/themeColor"
            />
            <gradient android:startColor="@color/startGradientPressed"
                      android:endColor="@color/endGradientPressed" />
            <stroke
                    android:width="0.5dp"
                    android:color="@color/textColor"
            />
        </shape>
    </item>

    <item android:background="?android:selectableItemBackground">
        <shape
                android:shape="rectangle"
                android:visible="true"  >
            <corners
                    android:topRightRadius="@dimen/button_rounded_more"
                    android:bottomRightRadius="@dimen/button_rounded_more"
            />
            <solid
                    android:color="@color/themeColor"
            />
            <gradient android:startColor="@color/startGradientNormal"
                      android:endColor="@color/endGradientNormal" />
            <stroke
                    android:width="0.5dp"
                    android:color="@color/textColor"
            />
        </shape>
    </item>
</selector>